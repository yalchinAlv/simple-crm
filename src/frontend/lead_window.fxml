<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.LeadWindow">
   <children>
      <VBox alignment="CENTER">
         <children>
            <Label fx:id="statusLabel" text="STATUS: XX %">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <HBox>
               <children>
                  <Label text="Customer: " />
                  <Button fx:id="customerButton" mnemonicParsing="false" text="Button" />
               </children></HBox>
            <HBox>
               <children>
                  <Label text="Start Date: " />
                  <DatePicker />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Stop Date: " />
                  <DatePicker />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Services: " />
                  <VBox fx:id="serviceVbox1" />
                  <VBox fx:id="serviceVbox2" />
                  <VBox fx:id="serviceVbox3" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Discount: " />
                  <TextField />
               </children></HBox>
            <HBox>
               <children>
                  <Label text="Fee without VAT: " />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="VAT: " />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Total: " />
               </children>
            </HBox>
         </children></VBox>
   </children>
</AnchorPane>
